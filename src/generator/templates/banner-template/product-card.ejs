<a class="card product-card scale-on-hover shadow-on-hover" href="<%= product.handle %>" target="_blank" data-item="<%= JSON.stringify({product_id: product.id, product_name: product.productTitle, retailer_name: product.retailer_data?.name, retailer_id: product.retailer_data?.id, embed_uuid: "some-uuid" }) %>">
  <div class="product-card-header">
    <img src="<%= product.image %>" alt="<%= product.title %>" class="product-image" loading="lazy" />
    <% if (product.retailer_data?.thumbnail_url) { %>
    <img src="<%= product.retailer_data.thumbnail_url %>" alt="<%= product.retailer_data.name %>" class="retail-logo" />
    <% } %> <% if (data.showDiscount(product.discountable, getDiscountPercentage(product.base_price, product.price))) { %>
    <div class="chip chip-small indicator text-semibold bg-negative">-<%= getDiscountPercentage(product.base_price, product.price) %>%</div>
    <% } %>
  </div>
  <div class="product-card-content">
    <p class="text-xxs text-semibold text-fg-subtle text-clip-1"><%= product.productTitle %></p>
    <%- include(__dirname + '/../shared/price-label.ejs', { product: product, formatPrice: formatPrice, showDiscount: showDiscount,
    getDiscountPercentage: getDiscountPercentage, index: index }) %>
    <div class="divider"></div>
    <p class="text-xxs text-fg-muted"><%= product.retailer %></p>
  </div>
</a>
